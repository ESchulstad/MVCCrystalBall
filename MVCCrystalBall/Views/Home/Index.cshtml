
@{
    ViewBag.Title = "Index";
}

<h2>Crystal Ball</h2>
@*<button>Click Me</button>*@

<img src="~/Content/crystal-ball.jpg" id="crystalBall" />

<p id="reply"></p>

<script>
    $(document).ready(function () {
        $("#crystalBall").hover(function () {
            //alert("yep, works.");
            $.get("@Url.Action("ShakeBall","Home")", function (response) {
                $("#reply").text(response);
            });
        });
    });

</script>

